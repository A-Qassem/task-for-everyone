<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="tank_bot">

    <!-- ============================================ -->
    <!-- TANK-STYLE TRACKED ROBOT - Industrial Design -->
    <!-- ============================================ -->

    <!-- Robot Material Colors - Industrial Orange/Black Theme -->
    <material name="industrial_orange">
        <color rgba="1.0 0.45 0.0 1"/>
    </material>

    <material name="dark_metal">
        <color rgba="0.15 0.15 0.15 1"/>
    </material>

    <material name="steel_gray">
        <color rgba="0.4 0.4 0.45 1"/>
    </material>

    <material name="warning_yellow">
        <color rgba="1.0 0.85 0.0 1"/>
    </material>

    <material name="sensor_green">
        <color rgba="0.0 0.8 0.3 1"/>
    </material>

    <!-- Base Link -->
    <link name="base_link">
    </link>

    <!-- ============================================ -->
    <!-- MAIN CHASSIS - Armored Tank Body -->
    <!-- ============================================ -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0.12"/>
    </joint>

    <link name="chassis">
        <!-- Main Body - Lower Section -->
        <visual>
            <origin xyz="0 0 0.04" rpy="0 0 0"/>
            <geometry>
                <box size="0.5 0.35 0.08"/>
            </geometry>
            <material name="industrial_orange"/>
        </visual>
        <!-- Main Body - Upper Section (Narrower) -->
        <visual>
            <origin xyz="0 0 0.12" rpy="0 0 0"/>
            <geometry>
                <box size="0.4 0.28 0.08"/>
            </geometry>
            <material name="industrial_orange"/>
        </visual>
        <!-- Front Armor Plate -->
        <visual>
            <origin xyz="0.22 0 0.04" rpy="0 0.3 0"/>
            <geometry>
                <box size="0.08 0.32 0.06"/>
            </geometry>
            <material name="dark_metal"/>
        </visual>
        <!-- Rear Armor Plate -->
        <visual>
            <origin xyz="-0.22 0 0.04" rpy="0 -0.3 0"/>
            <geometry>
                <box size="0.08 0.32 0.06"/>
            </geometry>
            <material name="dark_metal"/>
        </visual>
        <!-- Warning Stripes Left -->
        <visual>
            <origin xyz="0 0.175 0.08" rpy="0 0 0"/>
            <geometry>
                <box size="0.48 0.01 0.12"/>
            </geometry>
            <material name="warning_yellow"/>
        </visual>
        <!-- Warning Stripes Right -->
        <visual>
            <origin xyz="0 -0.175 0.08" rpy="0 0 0"/>
            <geometry>
                <box size="0.48 0.01 0.12"/>
            </geometry>
            <material name="warning_yellow"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.08" rpy="0 0 0"/>
            <geometry>
                <box size="0.5 0.35 0.16"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.08" rpy="0 0 0"/>
            <mass value="5.0"/>
            <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.08" iyz="0.0" izz="0.1"/>
        </inertial>
    </link>

    <!-- ============================================ -->
    <!-- SENSOR TURRET -->
    <!-- ============================================ -->
    <joint name="turret_joint" type="fixed">
        <parent link="chassis"/>
        <child link="turret"/>
        <origin xyz="0.05 0 0.16" rpy="0 0 0"/>
    </joint>

    <link name="turret">
        <!-- Turret Base -->
        <visual>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.08" length="0.04"/>
            </geometry>
            <material name="steel_gray"/>
        </visual>
        <!-- Turret Dome -->
        <visual>
            <origin xyz="0 0 0.06" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <material name="dark_metal"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.04" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.08" length="0.08"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.04" rpy="0 0 0"/>
            <mass value="0.3"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <!-- ============================================ -->
    <!-- LIDAR SENSOR -->
    <!-- ============================================ -->
    <joint name="laser_joint" type="fixed">
        <parent link="turret"/>
        <child link="laser_frame"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <link name="laser_frame">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
            <material name="sensor_green"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
    </link>

    <gazebo reference="laser_frame">
        <sensor name="lidar" type="gpu_lidar">
            <pose>0 0 0 0 0 0</pose>
            <always_on>true</always_on>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <topic>scan</topic>
            <frame_id>laser_frame</frame_id>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1</resolution>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.3</min>
                    <max>12</max>
                </range>
            </ray>
        </sensor>
    </gazebo>

    <!-- ============================================ -->
    <!-- TRACK SYSTEM - Left Side -->
    <!-- ============================================ -->
    
    <!-- Left Track Housing -->
    <joint name="left_track_housing_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_track_housing"/>
        <origin xyz="0 0.21 0.07" rpy="0 0 0"/>
    </joint>

    <link name="left_track_housing">
        <visual>
            <geometry>
                <box size="0.52 0.06 0.1"/>
            </geometry>
            <material name="dark_metal"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.52 0.06 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <!-- Left Drive Wheel (Rear) -->
    <link name="left_drive_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.05"/>
            </geometry>
            <material name="steel_gray"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.8"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002"/>
        </inertial>
    </link>

    <joint name="left_drive_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_drive_wheel"/>
        <origin xyz="-0.18 0.21 0.07" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Left Idler Wheel (Front) -->
    <link name="left_idler_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.05"/>
            </geometry>
            <material name="steel_gray"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.8"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002"/>
        </inertial>
    </link>

    <joint name="left_idler_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_idler_wheel"/>
        <origin xyz="0.18 0.21 0.07" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- ============================================ -->
    <!-- TRACK SYSTEM - Right Side -->
    <!-- ============================================ -->
    
    <!-- Right Track Housing -->
    <joint name="right_track_housing_joint" type="fixed">
        <parent link="base_link"/>
        <child link="right_track_housing"/>
        <origin xyz="0 -0.21 0.07" rpy="0 0 0"/>
    </joint>

    <link name="right_track_housing">
        <visual>
            <geometry>
                <box size="0.52 0.06 0.1"/>
            </geometry>
            <material name="dark_metal"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.52 0.06 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <!-- Right Drive Wheel (Rear) -->
    <link name="right_drive_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.05"/>
            </geometry>
            <material name="steel_gray"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.8"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002"/>
        </inertial>
    </link>

    <joint name="right_drive_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_drive_wheel"/>
        <origin xyz="-0.18 -0.21 0.07" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Right Idler Wheel (Front) -->
    <link name="right_idler_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.05"/>
            </geometry>
            <material name="steel_gray"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.05"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.8"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.002"/>
        </inertial>
    </link>

    <joint name="right_idler_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_idler_wheel"/>
        <origin xyz="0.18 -0.21 0.07" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- ============================================ -->
    <!-- GAZEBO FRICTION SETTINGS -->
    <!-- ============================================ -->
    <gazebo reference="left_drive_wheel">
        <mu1>2.0</mu1>
        <mu2>2.0</mu2>
    </gazebo>

    <gazebo reference="right_drive_wheel">
        <mu1>2.0</mu1>
        <mu2>2.0</mu2>
    </gazebo>

    <gazebo reference="left_idler_wheel">
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
    </gazebo>

    <gazebo reference="right_idler_wheel">
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
    </gazebo>

    <!-- ============================================ -->
    <!-- GAZEBO PLUGINS -->
    <!-- ============================================ -->
    <gazebo>
        <!-- Differential Drive using rear drive wheels -->
        <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
            <left_joint>left_drive_wheel_joint</left_joint>
            <right_joint>right_drive_wheel_joint</right_joint>
            <wheel_separation>0.42</wheel_separation>
            <wheel_radius>0.07</wheel_radius>
            <odom_publish_frequency>50</odom_publish_frequency>
            <topic>cmd_vel</topic>
            <odom_topic>odom</odom_topic>
            <frame_id>odom</frame_id>
            <child_frame_id>base_link</child_frame_id>
            <covariance_x>0.0001</covariance_x>
            <covariance_y>0.0001</covariance_y>
            <covariance_yaw>0.01</covariance_yaw>
        </plugin>

        <!-- Joint State Publisher -->
        <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
            <topic>joint_states</topic>
            <joint_name>left_drive_wheel_joint</joint_name>
            <joint_name>right_drive_wheel_joint</joint_name>
            <joint_name>left_idler_wheel_joint</joint_name>
            <joint_name>right_idler_wheel_joint</joint_name>
        </plugin>
    </gazebo>

</robot>
